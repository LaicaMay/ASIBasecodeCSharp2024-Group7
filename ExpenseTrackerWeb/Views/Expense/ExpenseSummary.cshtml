@{
    Layout = "_MainLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/css/expensesummary.css">

</head>

<div class="main-content">
    <div class="summary-container">
        <div class="expenses">
            <div class="topbarinfo">
                <h2>Expenses Summary</h2>
                <h4>January 1 - September 5</h4>
            </div>
            <div class="expensecontents">
                <div class="totalexpenses">
                    <h3>Total Expenses</h3>
                </div>
                <div class="groceryexpenses">
                    <h3>Grocery Expenses</h3>
                </div>
                <div class="schoolexpenses">
                    <h3>School Expenses</h3>
                </div>
            </div>
        </div>
        <div class="charts">
            <div class="pie-chart">
                <h3>Expense Trend</h3>
            </div>
            <div class="line-graph">
                <h3>Yearly Report</h3>
            </div>
        </div>
        <div class="button-container">
            <button id="generateReportButton">Generate Report</button>
        </div>
    </div>
