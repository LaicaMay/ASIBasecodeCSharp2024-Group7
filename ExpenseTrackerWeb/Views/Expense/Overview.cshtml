@{
    Layout = "_MainLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/mainStyle/general.css">
    <link rel="stylesheet" href="~/mainStyle/header.css">
    <link rel="stylesheet" href="~/mainStyle/expense-details.css">
</head>
<body>
    <main class="main">
        <div class="main-container">
            <div class="main-title">
                <h2>Hey there Mori!</h2>
                <p>Remaining balance</p>
            </div>
            <div class="balance-container">
                <div class="expense">
                    <p id="expense-category">Grocery</p>
                    <p id="expense-tag">PHP1,500.00</p>
                    <p id="expense-user">Mori Estella</p>
                    <div id="deduction">-750.00</div>
                </div>
                <div class="expense">
                    <p id="expense-category">School</p>
                    <p id="expense-tag">PHP2,500.00</p>
                    <p id="expense-user">Mori Estella</p>
                    <div id="deduction">-100.00</div>
                </div>
            </div>
            <div class="bottom-title">
                Recent Expenses
            </div>
            <div id="table-content" class="hide">
                <table class="table-expense">
                    <thead>
                        <tr>
                            <th><img src="~/images/iconVec/down-arrw.svg" alt=""></th>
                            <th>Expense Name</th>
                            <th>Amount</th>
                            <th>Date <img src="~/images/iconVec/down-arrw.svg" alt=""></th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div style="display: flex;
                            align-items: center;
                            justify-content: center;">
                                    <div class="img-bg">
                                        <img src="~/images/iconVec/tags.svg" alt="">
                                    </div>
                                    <p style="margin-left: 10px;">Grocery</p>
                                </div>
                            </td>
                            <td>Cookie Ingredients</td>
                            <td>PHP750.00</td>
                            <td>09/29/2024</td>
                            <td><a href="#">Details</a></td>
                        </tr>
                        <tr>
                            <td>
                                <div style="display: flex;
                            align-items: center;
                            justify-content: center;">
                                    <div class="img-bg">
                                        <img src="~/images/iconVec/tags.svg" alt="">
                                    </div>
                                    <p style="margin-left: 10px;">Grocery</p>
                                </div>
                            </td>
                            <td>Cookie Ingredients</td>
                            <td>PHP750.00</td>
                            <td>09/29/2024</td>
                            <td><a href="#">Details</a></td>
                        </tr>
                        <tr>
                            <td>
                                <div style="display: flex;
                            align-items: center;
                            justify-content: center;">
                                    <div class="img-bg">
                                        <img src="~/images/iconVec/tags.svg" alt="">
                                    </div>
                                    <p style="margin-left: 10px;">Grocery</p>
                                </div>
                            </td>
                            <td>Cookie Ingredients</td>
                            <td>PHP750.00</td>
                            <td>09/29/2024</td>
                            <td><a href="#">Details</a></td>
                        </tr>
                    </tbody>
                </table>
                <div class="button-search">
                    <div style="position: relative;">
                        <input type="text" placeholder="Search">
                        <div style="position: absolute;
                        top: 10px; right: 0;">
                            <button id="searchBtn">Search</button>
                        </div>
                    </div>
                    <a href="#">Add Expenses</a>
                </div>
            </div>
            <div style="display: flex; justify-content: space-between;">
                <div id="view-recent" class="recent-hide">
                    <a href="#">View Recent</a>
                </div>
                <div id="add-expense" class="recent-hide">
                    <a href="#">Add Expenses</a>
                </div>
            </div>
        </div>

        <div id="expense-details">
            <div style="display: flex; align-items: center; justify-content: center;
      margin-top: 10px;
      margin-bottom: 10px;">
                <div>
                    <p class="details-expense">Expense Details</p>
                </div>
            </div>
            <div style="display: flex; flex-direction: row; align-items: center;
      justify-content: start;
      margin-top: 25px;">
                <div style="display: flex; flex-direction: column;
        margin-left: 20px;
        gap: 15px;">
                    <div>
                        <img src="~/images/iconVec/ingredient-icon.svg" alt="">
                    </div>
                    <div>
                        <img src="~/images/iconVec/money-icon.svg" alt="">
                    </div>
                    <div>
                        <img src="~/images/iconVec/CategoryThumbail.svg" alt="">
                    </div>
                    <div>
                        <img src="~/images/iconVec/bag-icon.svg" alt="">
                    </div>
                    <div>
                        <img src="/images/iconVec/paper-icon.svg" alt="">
                    </div>
                </div>
                <div style="display: flex; flex-direction: column; margin-left: 20px;
        gap: 15px;">
                    <p>Cookie Ingredients</p>
                    <p>PHP 750.00</p>
                    <p>Grocery</p>
                    <p>09/29/2024</p>
                    <p>Buying Ingredients for Baby Ellie</p>
                </div>
            </div>

            <div style="display: flex; align-items: center; justify-content: center;
      margin-top: 10px;
      margin-bottom: 10px;">
                <button id="edit">Edit</button>
            </div>
            <div style="display: flex; align-items: center; justify-content: center;
      margin-top: 10px;
      margin-bottom: 10px;">
                <button id="del">Delete</button>
            </div>

        </div>
        <div class="blur-bg">
        </div>
    </main>

    <script src="~/js/main-sidebar.js"></script>
</body>
</html>