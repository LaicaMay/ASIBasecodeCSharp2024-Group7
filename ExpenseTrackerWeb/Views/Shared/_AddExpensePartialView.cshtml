@model ExpenseTracker.Data.Models.Expense

<div id="add-expense-container" class="hide">
    <form method="post" asp-controller="Expense" asp-action="AddExpense">
        <div id="expense-add">
            <p style="margin-top: 20px;">Add Expense</p>
            <div style="position: relative;">
                <input asp-for="ExpenseName" type="text" placeholder="Expense Name" style="width: 275px; padding: 10px 10px 10px 25px; border-radius: 20px; border: 1px solid black;" />
                <div style="position: absolute; left: 8px; top: 10px;"><img src="~/images/iconVec/ingredient-icon.svg" alt=""></div>
            </div>
            <div style="position: relative;">
                <input asp-for="Amount" type="text" placeholder="Amount" style="width: 275px; padding: 10px 10px 10px 25px; border-radius: 20px; border: 1px solid black;" />
                <div style="position: absolute; left: 8px; top: 8px;"><img style="width:16px; " src="~/images/iconVec/money-icon.svg" alt=""></div>
            </div>
            <select asp-for="CategoryId" style="background-color: #272B2C; padding: 10px; border-radius: 20px; border: 1px solid black; color: white;" required>
                <option value="" disabled selected hidden>Category</option>
                @foreach (var category in ViewBag.Category)
                {
                    <option value="@category.Value">@category.Text</option>
                }
            </select>
            <input asp-for="Date" type="date" style="width: 150px; padding: 10px 10px 10px 25px; border-radius: 20px; border: 1px solid black;" />
            <div style="position: relative;">
                <textarea asp-for="Description" type="text" style="height: 120px; padding:10px; border-radius: 20px; width: 275px; resize: none;"></textarea>
                <div style="position: absolute; left: 8px; top: 10px;"><img src="/images/iconVec/paper-icon.svg" alt=""></div>
            </div>
            <button style="cursor: pointer; width: 275px; padding: 10px 10px 10px 25px; border-radius: 20px; border: 1px solid black; background-color: #272B2C; color: white;" type="submit">
                Save Expense
            </button>
        </div>
    </form>
    <div id="add-blur" class="add-blur-bg"></div>
</div>
